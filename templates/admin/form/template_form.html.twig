{% block text_widget %}
    <div class="form-group {% if form.vars.errors|length > 0  %} label-floating has-danger {% endif %} col-md-9">
        {% if form.vars.errors|length > 0  %}  <label class="control-label">Valeur non-valide</label> {% endif %}
        <label for="{{ form.vars.id }}">{{ form.vars.label }}</label>
        <input type="text" class="form-control"  {{ block('widget_attributes') }} value="{{ form.vars.value }}">
    </div>
{% endblock %}

{% block choice_widget %}
    {% for choice in form.vars.choices%}
        <div class="form-group col-md-6">
            <div class="form-check form-check-radio form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" {{ block('widget_attributes') }} value="{{ choice.value }}">{{ choice.label }}
                    <span class="circle">
                <span class="check"></span>
            </span>
                </label>
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block email_widget %}
    <div class="form-group col-md-6">
        <label for="{{ form.vars.id }}">{{ form.vars.label }}</label>
        <input type="email" class="form-control" {{ block('widget_attributes') }} value="{{ form.vars.value }}">
    </div>
{% endblock %}
