{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
        {{ form_start(profilForm) }}
        {{ form_widget(profilForm) }}
        <button class="btn btn-lg btn-primary" type="submit">
            Sign up
        </button>
        {{ form_end(profilForm) }}

        {{ form_start(pictureForm) }}
        <div class="file-field input-field">
            <div class="btn">
                <span>{{ pictureForm.profilePicture.vars.label }}</span>
                {{ form_widget(pictureForm.profilePicture) }}
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Enregistrer</button>
        {{ form_end(pictureForm) }}
    </div>
{% endblock %}
