                    <span class="helper-text" data-error="{{ error.message }}" data-success="right"></span>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block email_widget %}
    <div class="input-container">
        <label class="label-input100" for="email">{{ form.vars.label }}</label>
        <div class="wrap-input100 validate-input">
            <input id="{{ form.vars.id }}"  {{ block('widget_attributes') }} class="{% if form.vars.errors|length > 0  %} invalid {% endif %}" type="email" value="{{ form.vars.value }}" placeholder="Eg. example@email.com">
            {% if form.vars.errors %}
                {% for error in form.vars.errors %}
                    <span class="helper-text" data-error="{{ error.message }}" data-success="right"></span>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block choice_widget %}
    <div class="input-container">
        <div class="input-field">
                <select {{ block('widget_attributes') }} class="{% if form.vars.errors|length > 0  %} invalid {% endif %}">
                    {% for var in form.vars.choices %}
                        <option value="{{ var.value }}" {% if var.value == form.vars.value %} selected {% endif %} >{{ var.label }}</option>
                    {% endfor %}
                </select>
                <label for="{{ form.vars.id }}">{{ form.vars.label }}</label>
                {% if form.vars.errors %}
                    {% for error in form.vars.errors %}
                        <span class="helper-text" data-error="{{ error.message }}" data-success="right"></span>
                    {% endfor %}
                {% endif %}
            </div>
    </div>

{% endblock %}

{% block datetime_widget %}
    <div class="input-container">
        <label for="{{ form.vars.id }}"> {{ form.vars.label }}</label>
        <input type="text" class="datepicker {% if form.vars.errors|length > 0  %} invalid {% endif %}" {{ block('widget_attributes') }}  id="{{ form.vars.id }}" value="{{ form.vars.value|date('d/m/Y') }}">
        {% if form.vars.errors %}
            {% for error in form.vars.errors %}
                <span class="helper-text" data-error="{{ error.message }}" data-success="right"></span>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}

