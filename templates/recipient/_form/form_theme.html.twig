{# integer #}
{% block number_widget %}
    <div class="input-container">
        <label for="{{ form.vars.id }}" for="first-name">{{ form.vars.label|raw }}</label>
        <div class="wrap-input100 rs1 validate-input">
            <input   id="{{ form.vars.id }}"  {{ block('widget_attributes') }} class="input100" type="number"  value="{{ form.vars.value }}"  placeholder="{{ form.vars.label }}">
            <span class="focus-input100"></span>
        </div>
    </div>
{% endblock %}

