{# integer #}
{% block number_widget %}
    <div class="input-container">
        <label for="{{ form.vars.id }}">{{ form.vars.label|raw }}</label>
        <div class="wrap-input100 rs1 validate-input">
            <input   id="{{ form.vars.id }}"  {{ block('widget_attributes') }} class="{% if form.vars.errors|length > 0  %} invalid {% endif %}" type="number"  value="{{ form.vars.value }}"  placeholder="{{ form.vars.label }}">
            {% if form.vars.errors %}
                {% for error in form.vars.errors %}
                    <span class="helper-text" data-error="{{ error.message }}" data-success="right"></span>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block text_widget %}
    <div class="input-container">
        <label for="{{ form.vars.id }}" for="first-name">{{ form.vars.label|raw }}</label>
        <div class="wrap-input100 rs1 validate-input">
            <input   id="{{ form.vars.id }}"  {{ block('widget_attributes') }} class="{% if form.vars.errors|length > 0  %} invalid {% endif %}" type="text"  value="{{ form.vars.value }}"  placeholder="{{ form.vars.label }}">
            {% if form.vars.errors %}
