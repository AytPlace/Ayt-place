{% block email_widget %}
    <div class="input-container">
        <label class="label-input100" for="email">Email Address *</label>
        <div class="wrap-input100 validate-input">
            <input id="{{ form.vars.id }}"  {{ block('widget_attributes') }} class="input100" type="email" value="{{ form.vars.value }}" placeholder="Eg. example@email.com">
            <span class="focus-input100"></span>
        </div>
    </div>
{% endblock %}