{% extends 'recipient/_base.html.twig' %}

{% block title %}Discussion avec {{ client.firstname }} {{ client.lastname }}{% endblock %}

{% block body %}
    <div class="row">
        <h2 class="chatting__title">Discussion avec {{ client.firstname }} {{ client.lastname }}</h2>
        <div id="chatting" class="z-depth-5">
            <div class="message__container">
                {% for response in responses %}
                    <div class="col s12 m6 {% if response.sender == 'recipient' %} card-right {% else %} card-left {% endif %}">
                        <div class="card blue-grey darken-1">
                            <div class="card-content white-text">
                                <span>{{ response.createdAt|date('d/m/y') }}</span>
                                <p>{{ response.content }}</p>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="default__message">Aucun message partager</p>
                {% endfor %}
            </div>
            <div class="chattingForm__container">
                {{ form_start(form) }}
                {{ form_widget(form.content) }}
                <button type="submit" class="btn">Envoyer</button>
                {{ form_end(form) }}
            </div>
        </div>

{% endblock %}